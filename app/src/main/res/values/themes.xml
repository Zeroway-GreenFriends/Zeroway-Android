<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zeroway" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/Widget.Material3.PopupMenu.Custom</item>
    </style>

    <style name="Theme.Zeroway.Splash">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Widget.Material3.PopupMenu.Custom" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/ic_popup_menu_background</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>