<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_community_post_comments_profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_community_post_comments_profile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="쏘멍"
        android:textColor="@color/zeroway_black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/item_community_post_comments_profile_iv"
        app:layout_constraintStart_toEndOf="@id/item_community_post_comments_profile_iv"
        app:layout_constraintTop_toTopOf="@id/item_community_post_comments_profile_iv" />

    <TextView
        android:id="@+id/item_community_post_comments_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:text="작성된 댓글을 보여주는 text view"
        android:textColor="@color/zeroway_black"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/item_community_post_comments_content_tv"
        app:layout_constraintStart_toEndOf="@id/item_community_post_comments_profile_name_tv"
        app:layout_constraintTop_toTopOf="@id/item_community_post_comments_profile_name_tv" />

    <ImageView
        android:id="@+id/item_community_post_comments_like_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_like_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_community_post_comments_profile_name_tv" />

    <TextView
        android:id="@+id/item_community_post_comments_day_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:text="1주"
        android:textColor="@color/zeroway_gray"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@id/item_community_post_comments_content_tv"
        app:layout_constraintTop_toBottomOf="@id/item_community_post_comments_content_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_community_post_comments_like_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="좋아요"
        android:textColor="@color/zeroway_gray"
        android:textSize="8sp"
        app:layout_constraintTop_toTopOf="@id/item_community_post_comments_day_iv"
        app:layout_constraintStart_toEndOf="@id/item_community_post_comments_day_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_community_post_comments_day_iv"/>

    <TextView
        android:id="@+id/item_community_post_comments_like_input_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="3"
        android:textColor="@color/zeroway_gray"
        android:textSize="8sp"
        app:layout_constraintTop_toTopOf="@id/item_community_post_comments_like_tv"
        app:layout_constraintStart_toEndOf="@id/item_community_post_comments_like_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_community_post_comments_like_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>