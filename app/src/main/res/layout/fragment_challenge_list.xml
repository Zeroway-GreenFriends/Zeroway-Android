<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E7F4F3">

    <ImageButton
        android:id="@+id/challenge_list_goback_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_goback"
        android:backgroundTint="#E7F4F3"/>

    <TextView
        android:id="@+id/challenge_list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/challenge_list_goback_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="40dp"
        android:text="챌린지를 달성해서\n당신의 캐릭터를 성장시켜보세요!"
        android:textColor="#209B90"
        android:textSize="15sp"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/challenge_list_list_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/challenge_list_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_challenge_list_detail"/>

    <ImageButton
        android:id="@+id/challenge_list_check_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/challenge_list_list_tv1"
        app:layout_constraintStart_toStartOf="@id/challenge_list_list_tv1"
        android:src="@drawable/ic_check_circle"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/challenge_list_list_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/challenge_list_list_tv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp"
        android:background="@drawable/ic_challenge_list_detail"/>

    <ImageButton
        android:id="@+id/challenge_list_check_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/challenge_list_list_tv2"
        app:layout_constraintStart_toStartOf="@id/challenge_list_list_tv2"
        android:src="@drawable/ic_check_circle"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/challenge_list_list_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/challenge_list_list_tv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp"
        android:background="@drawable/ic_challenge_list_detail"/>

    <ImageButton
        android:id="@+id/challenge_list_check_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/challenge_list_list_tv3"
        app:layout_constraintStart_toStartOf="@id/challenge_list_list_tv3"
        android:src="@drawable/ic_check_circle"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/challenge_list_list_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/challenge_list_list_tv3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp"
        android:background="@drawable/ic_challenge_list_detail"/>

    <ImageButton
        android:id="@+id/challenge_list_check_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/challenge_list_list_tv4"
        app:layout_constraintStart_toStartOf="@id/challenge_list_list_tv4"
        android:src="@drawable/ic_check_circle"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/challenge_list_list_tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/challenge_list_list_tv4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp"
        android:background="@drawable/ic_challenge_list_detail"/>

    <ImageButton
        android:id="@+id/challenge_list_check_btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/challenge_list_list_tv5"
        app:layout_constraintStart_toStartOf="@id/challenge_list_list_tv5"
        android:src="@drawable/ic_check_circle"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/challenge_list_ok_btn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/challenge_list_list_tv5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:text="확인"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/ic_ok_btn_detail"/>

</androidx.constraintlayout.widget.ConstraintLayout>