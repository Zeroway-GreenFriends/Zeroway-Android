<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_levelup_background">

    <TextView
        android:id="@+id/levelup_levelup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/fredoka_regular"
        android:text="LEVEL UP !"
        android:textColor="@color/zeroway_dark_mint"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/levelup_character_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_char_shadow"
        app:layout_constraintBottom_toTopOf="@+id/levelup_level_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelup_levelup_tv" />

    <TextView
        android:id="@+id/levelup_level_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="129dp"
        android:text="Lv.6"
        android:textColor="@color/zeroway_dark_mint"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/levelup_ok_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/levelup_ok_btn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/ic_ok_btn_detail_white"
        android:text="확인"
        android:textColor="@color/zeroway_mint"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>