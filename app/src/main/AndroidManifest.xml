<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greenfriends.zeroway">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ZerowayApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zeroway">

        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:host="oauth"
                    android:scheme="kakao307669f1987730b12c5a548ce1573c4d" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.greenfriends.zeroway.MainActivity"
            android:exported="true">

        </activity>
        <activity
            android:name="com.greenfriends.zeroway.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.greenfriends.zeroway.LoginActivity"
            android:exported="true"/>
    </application>

</manifest>